<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Detalles del Inmueble"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_image"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_toolbar_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivPropiedad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Imagen de la propiedad"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_main_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/card_image">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/jp_primary"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="$17000.00"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <!-- SECCIÓN MODIFICADA -->
            <CheckBox
                android:id="@+id/cbDisponible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Disponible"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:checked="true" />
            <!-- FIN DE LA SECCIÓN MODIFICADA -->

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/card_main_info">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/jp_primary"
            android:orientation="vertical"
            android:padding="16dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="3"
                android:columnOrderPreserved="false"
                android:rowCount="2">

                <LinearLayout style="@style/DetailItemLayout">

                    <TextView
                        style="@style/DetailLabelStyle"
                        android:text="Código"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvCodigo"
                        style="@style/DetailValueStyle"
                        android:text="503"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout style="@style/DetailItemLayout">

                    <TextView
                        style="@style/DetailLabelStyle"
                        android:text="Ambientes"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvAmbientes"
                        style="@style/DetailValueStyle"
                        android:text="3"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout style="@style/DetailItemLayout">

                    <TextView
                        style="@style/DetailLabelStyle"
                        android:text="Tipo"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvTipo"
                        style="@style/DetailValueStyle"
                        android:text="Casa"
                        android:textColor="@color/white" />
                </LinearLayout>
            </GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="#EEEEEE" />

            <TextView
                style="@style/DetailLabelStyle"
                android:text="Dirección"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Salta 325"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                style="@style/DetailLabelStyle"
                android:text="Uso"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvUso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Particular"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
