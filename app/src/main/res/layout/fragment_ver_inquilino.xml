<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".ui.inquilinos.VerInquilinoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detalles del Inquilino"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#34495E"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_personal_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_nombre_completo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Mario Luna"
                        android:textColor="#E67E22"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:columnOrderPreserved="false">

                        <LinearLayout style="@style/DetailItemLayout.HalfWidth">

                            <TextView
                                style="@style/DetailLabelStyle"
                                android:text="Código" />

                            <TextView
                                android:id="@+id/tv_codigo"
                                style="@style/DetailValueStyle.Bold"
                                android:text="100" />
                        </LinearLayout>

                        <LinearLayout style="@style/DetailItemLayout.HalfWidth">

                            <TextView
                                style="@style/DetailLabelStyle"
                                android:text="DNI" />

                            <TextView
                                android:id="@+id/tv_dni"
                                style="@style/DetailValueStyle.Bold"
                                android:text="25340691" />
                        </LinearLayout>
                    </GridLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_contact_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingHorizontal="8dp"
                        android:text="Contacto del Inquilino"
                        android:textColor="#34495E"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/ll_email_action"
                        style="@style/ContactRowActionStyle">

                        <ImageView
                            style="@style/ContactIconStyle"
                            android:contentDescription="Email"
                            android:src="@drawable/ic_email" />

                        <LinearLayout style="@style/ContactTextBoxStyle">

                            <TextView
                                style="@style/DetailLabelStyle"
                                android:text="Email" />

                            <TextView
                                android:id="@+id/tv_email"
                                style="@style/DetailValueStyle"
                                android:text="luna@mail.com" />
                        </LinearLayout>
                    </LinearLayout>

                    <View style="@style/DividerStyle" />

                    <LinearLayout
                        android:id="@+id/ll_telefono_action"
                        style="@style/ContactRowActionStyle">

                        <ImageView
                            style="@style/ContactIconStyle"
                            android:contentDescription="Teléfono"
                            android:src="@drawable/ic_phone" />

                        <LinearLayout style="@style/ContactTextBoxStyle">

                            <TextView
                                style="@style/DetailLabelStyle"
                                android:text="Teléfono" />

                            <TextView
                                android:id="@+id/tv_telefono"
                                style="@style/DetailValueStyle"
                                android:text="2664253411" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_call_inquilino_quick"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center_vertical"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:contentDescription="Llamar Inquilino"
                            android:focusable="true" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>